<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Alert Dialog Theme-->
    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/dodger_blue</item>
        <item name="android:textColorPrimary">@color/grey_blue</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:windowTitleStyle">@style/DialogTitleTextStyle</item>
        <item name="android:windowTitleSize">20sp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="DialogTitleTextStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/dark_grey_blue</item>
    </style>
</resources>